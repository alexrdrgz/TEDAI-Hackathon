# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# Development default includes both frontend and backend localhost
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# Production example:
# ALLOWED_ORIGINS=https://your-frontend.com,https://app.your-domain.com

# Database Configuration
# SQLite database will be created automatically in backend/data/database.db

