{
  "manifest_version": 3,
  "name": "TEDAI Proactive AI Agent",
  "version": "1.0.0",
  "description": "An intelligent AI agent that monitors your screen and provides proactive suggestions",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "alarms",
    "notifications",
    "system.display"
  ],
  "host_permissions": [
    "http://localhost:3030/*",
    "http://localhost:3000/*",
    "http://localhost:3001/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/utils/swipeGestures.js", "toast-notification.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TEDAI AI Agent"
  },
  "web_accessible_resources": [
    {
      "resources": ["page.html"],
      "matches": ["<all_urls>"]
    }
  ]
}